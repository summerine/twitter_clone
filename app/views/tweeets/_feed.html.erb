<div class="column is-two-fifths">
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/64x64.png"> </p>
            </figure>
            <div class="media-content">
                <%= render 'tweeets/form' %>
            </div>
        </article>
    </div>

    <% @tweeets.each do | tweeet | %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64"> 
                <img src="https://bulma.io/images/placeholders/64x64.png">
            </figure>
        </div>
        <div class="media-content">
            <div class="content">
                <strong>Arthur Kirkland</strong><br/>
                <small> @ArthurKirkland </small><br/>
                <p><%= tweeet.tweeet %></p>
                <nav class="level">
                    <div class="level-left is-mobile">
                        <div class="level-item">
                            <%= link_to tweeet do %>
                                <span class="icon"> <%= fa_icon "link" %> </span>
                            <% end %>
                            <%= link_to edit_tweeet_path(tweeet) do %>
                            <span class="icon">  <%= fa_icon "pencil " %> </span>
                            <% end %>
                            <%= link_to tweeet, method: :delete, data: {confirm: "Delete this tweet?"} do %>
                                <span class="icon"> <%= fa_icon "trash" %> </span>
                            <%end%>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </article>
</div>

<% end %> 