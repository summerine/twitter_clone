<div class="column is-half">
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/64x64.png"> </p>
            </figure>
            <div class="media-content">
            </div>
        </article>
    </div>

    <% @tweeets.each do | tweeet | %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64"> 
                 <img src="https://bulma.io/images/placeholders/64x64.png">
             </figure>
         </div>
         <div class="media-content">
            <div class="content">
                <strong>Indri</strong><br/>
                <small> @lilium_in_chaos </small><br/>
                <p><%= tweeet.tweeet %></p>
                <nav class="level">
                    <div class="level-left is-mobile">
                        <div class="level-item">
                            <%= link_to tweeet do %>
                                <span class="icon"> <%= fa_icon "link" %> </span>
                            <% end %>
                            <%= link_to edit_tweeet_path(tweeet) do %>
                              <span class="icon">  <%= fa_icon "pencil " %> </span>
                            <% end %>
                            <%= link_to tweeet, method: :delete, data: {confirm: "Delete this tweet?"} do %>
                                <span class="icon"> <%= fa_icon "trash" %> </span>
                            <%end%>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </article>
</div>

<% end %>